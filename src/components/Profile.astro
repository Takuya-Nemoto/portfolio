---
import { Image } from "astro:assets";
import background from "../../public/background-white.jpg";
---

<div class="w-full h-screen flex justify-center">
  <div class="absolute inset-0">
    <Image
      src="/background-white.jpg"
      alt="Profile"
      class="fill h-screen w-full"
      height={1080}
      width={1920}
      format="webp"
    />
  </div>
  <div
    class="absolute z-10 top-1/3 h-72 flex flex-col items-center justify-around"
  >
    <p class="text-4xl lg:text-6xl">Takuya Nemoto</p>
    <p class="text-xl lg:text-3xl">プログラマー</p>
    <a href="#projects">
      <button
        class="bg-blue-600 rounded-md h-12 w-36 lg:h-20 lg:w-48 text-white text-xl lg:text-3xl hover:bg-blue-500"
      >
        Projects
      </button>
    </a>
  </div>
</div>
